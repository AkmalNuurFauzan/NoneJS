<div class="author">
    <h1 class="author__body">You can Create</h1>
    <p class="author__body">Your Own blog by yourself</p>

    <img src="/img/hero-image.webp" alt="unrecognizable asian woman sitting cafe working laptop" class="hero-image" width="981" height="528">

    <section class="articles">
        <h2 class="article__heading">Latest Post</h2>

        <ul class="article_ul">

            <% data.forEach(post => { %>
                             
                <li>
                    <a href="/post/<%= post._id %>">
                        <span><%= post.title %></span>
                        <span class="article-list__date"><%= post.createAt.toDateString() %></span>
                    </a>
                </li>

                <% }) %>

            </ul>            
            
            <% if (nextPage !== null) { %>             
                <a href="/?page=<%= nextPage %>" class="pagination">&lt; View Older Posts</a>
            <% } %>

    </section>
</div>